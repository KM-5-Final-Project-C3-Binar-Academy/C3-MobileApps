<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="10dp"
    android:backgroundTint="@color/shimmerColorBase"
    app:cardElevation="2dp">


    <View
        android:id="@+id/iv_image_category"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/shimmerColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_image_category2"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_background_image"/>

    <View
        android:id="@+id/iv_image_category2"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/shimmerColor"
        app:layout_constraintStart_toEndOf="@id/iv_image_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_background_image"/>

    <View
        android:id="@+id/tv_name_category"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/shimmerColor"
        app:layout_constraintEnd_toEndOf="@id/iv_image_category"
        app:layout_constraintStart_toStartOf="@id/iv_image_category"
        app:layout_constraintTop_toBottomOf="@id/iv_image_category"/>

    <View
        android:id="@+id/tv_name_category2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/shimmerColor"
        app:layout_constraintEnd_toEndOf="@id/iv_image_category2"
        app:layout_constraintStart_toStartOf="@id/iv_image_category2"
        app:layout_constraintTop_toBottomOf="@id/iv_image_category2"/>
</androidx.constraintlayout.widget.ConstraintLayout>